<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="developerappedida.appedida">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:name="developerappedida.appedida.AppedidaAplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:logo="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="developerappedida.appedida.activity.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.MenuAppedida"

            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.RegistrarAppedida"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name=".activity.FazerPedidoActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name=".activity.MeusPedidosActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.SelecionarUnidadesActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.StatusPedidosActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>
